{% extends "Common/common.html.twig" %}
{% block script %}
<script type="text/javascript">
  function refreshimage() {
      var cap = document.getElementById('vcode');
      cap.src = cap.src + '?';
  }
</script>

{% endblock %}
{% block container %}
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <img src="{{base_url('public/admin/img/logo.png')}}" alt="">
            </div>
            <b style="color:red">{{error_flashdata}}</b>
            <form class="m-t" role="form" action="{{base_url('admin/Login/do_login')}}"  method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="账户" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="密码" required="">
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            </form>
        </div>
    </div>
{% endblock %}
